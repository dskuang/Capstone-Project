<% if (blog.get("follow_relation_id") !== null) { %>
    <% var followState = "unFollow"; %>
  <% } else { %>
    <% var followState = "Follow"; %>
  <% } %>


<div class="blog-header">
  <div class="user-profile-pic">
    <img data-user-id="<%=blog.get('user_id')%>" class = "thumbnail-user-blog" src="<%= blog.get("profileUrl") %>" >
  </div>
  <div class="blog-text">
    <h1 class="blog-title"><%= blog.escape('title') %></h1>
    <%if (blog.escape("user_id") !== Tumblr.CURRENT_USER.id) { %>
      <button class="blog-follow btn btn-primary"><%= followState %></button>
    <% } %>
  </div>
</div>

<div class="posts">
</div>
